<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">
        <ImageView
            android:id="@+id/img_thumb"
            android:src="@drawable/sample_1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
        <LinearLayout
            android:background="@color/blackTransparent"
            android:padding="@dimen/_8sdp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:textSize="@dimen/_14sdp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:lines="1"
                android:text="Tottenham - Arsenal: Siêu sao lên tiếng, đau tim phút bù giờ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_desc"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:lines="3"
                android:text="(Video bóng đá - Kết quả bóng đá, Tottenham - Arsenal, vòng 27 Ngoại hạng Anh) Trận derby Bắc London chứng kiến sự lên tiếng của siêu sao và những phút bù giờ hú vía."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>